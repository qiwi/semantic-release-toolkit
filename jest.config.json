{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/**/src/main/**/*.(j|t)s"
  ],
  "testFailureExitCode": 1,
  "transform": {
    "^.+\\.tsx?$": "ts-jest",
    "^.+\\.jsx?$": "@swissquote/crafty-preset-jest/src/esm-transformer"
  },
  "transformIgnorePatterns": [
    "<rootDir>/../../node_modules/(?!read-pkg-up8/.*)",
    "<rootDir>/node_modules/(?!read-pkg-up8/.*)"
  ],
  "projects": [
    "<rootDir>/packages/config/jest.config.json",
    "<rootDir>/packages/config-monorepo/jest.config.json",
    "<rootDir>/packages/preset/jest.config.json",
    "<rootDir>/packages/plugin-creator/jest.config.json",
    "<rootDir>/packages/plugin-actions/jest.config.json",
    "<rootDir>/packages/testing-suite/jest.config.json",
    "<rootDir>/packages/common/jest.config.json",
    "<rootDir>/packages/metabranch/jest.config.json"
  ]
}
